<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoingActivity"
    android:background="@color/colorB">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <include layout="@layout/app_bar_layout"
        android:id="@+id/going_bar"
        android:layout_height="50dp"
        android:layout_width="match_parent"></include>





    <TextView
        android:id="@+id/baslan"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/going_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill the information:"
        ></TextView>

    <TextView
        android:id="@+id/EE"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/baslan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I need someone going from:"
        ></TextView>

    <Spinner
        android:textAlignment="center"
        android:background="@drawable/inputs"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/EE"
        android:id="@+id/spinner_from"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/ETTE"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinner_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to:"
        ></TextView>

    <Spinner
        android:textAlignment="center"
        android:background="@drawable/inputs"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/ETTE"
        android:id="@+id/spinner_to"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/EE2"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinner_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Between Date 1:"
        ></TextView>

    <TextView
        android:paddingTop="8dp"
        android:textSize="18dp"
        android:hint="Select a date"
        android:textAlignment="center"
        android:background="@drawable/inputs"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/EE2"
        android:id="@+id/date1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        ></TextView>


    <TextView
        android:id="@+id/EE3"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="And Date 2:"
        ></TextView>

    <TextView
        android:paddingTop="8dp"
        android:textSize="18dp"
        android:hint="Select a date"
        android:textAlignment="center"
        android:background="@drawable/inputs"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/EE3"
        android:id="@+id/date2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        ></TextView>

    <TextView
        android:id="@+id/EE4"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason:"
        ></TextView>

    <EditText
        android:layout_centerInParent="true"
        android:textSize="18dp"
        android:hint="Reason"
        android:textAlignment="center"
        android:background="@drawable/inputs"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/EE4"
        android:id="@+id/snotes"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        ></EditText>



    <Button
        android:id="@+id/going_post_btn"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:text="Post"
        android:background="@drawable/buttons"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/snotes"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginBottom="30dp"

        ></Button>

    </RelativeLayout>

</ScrollView>