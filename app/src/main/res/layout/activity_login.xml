<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/login">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/login_icon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/traveleer" />


    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:paddingBottom="20dp"

        />

    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/login_passward"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/password"
        android:ems="50"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/buttons"
        android:text="Login"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <TextView
        android:layout_below="@+id/login_button"
        android:id="@+id/register_account_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Or create a new account now: "
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp" />



    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/emailsigninbtn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_account_link"
        android:background="@drawable/input2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:textColor="@color/colorAccent"
        android:text="sign in with email "
        ></Button>


    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/phonesigninbtn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/emailsigninbtn"
        android:background="@drawable/input2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:textColor="@color/colorAccent"
        android:text="sign in with phone "
        ></Button>



    <TextView
        android:layout_marginTop="10dp"

        android:textColor="@color/black"
        android:id="@+id/forget_pass"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/phonesigninbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget my password"/>

</RelativeLayout>