<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:id="@+id/user_info"
    android:background="@color/colorAccent">



    <TextView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/userInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Information"
        android:textSize="30dp"
        android:textStyle="italic"
        />


    <TextView

        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/rating"
        android:layout_below="@+id/userInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating:"
        android:textSize="25dp"
        android:textStyle="italic"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/L1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_black_24dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_black_24dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_black_24dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_black_24dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_black_24dp" />

    </LinearLayout>


    <TextView
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Lover"
        android:textSize="30dp"
        android:layout_below="@+id/userInfoTitle"
        android:textStyle="bold|italic"

        />


    <ImageView
        android:id="@+id/imagetitle"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_below="@+id/nickname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/fatmanicon2"
        />



    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/profile_ac_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagetitle"
        android:layout_centerHorizontal="true"
        android:text="Gender"
        android:textColor="@color/colorB"
        android:textSize="17dp"
        android:textStyle="italic"

        />

    <TextView
        android:id="@+id/profile_ac_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_ac_gender"
        android:layout_centerHorizontal="true"
        android:text="Country"
        android:textColor="@color/colorB"
        android:textSize="17dp"
        android:textStyle="italic"

        />

    <TextView
        android:layout_centerHorizontal="true"

        android:id="@+id/profile_ac_relationship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relationship"
        android:layout_below="@+id/profile_ac_country"
        android:textColor="@color/colorB"
        android:textSize="17dp"
        android:textStyle="italic"

        />

    <TextView
        android:layout_centerHorizontal="true"

        android:id="@+id/profile_ac_dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of birth"
        android:layout_below="@+id/profile_ac_relationship"
        android:textColor="@color/colorB"
        android:textSize="17dp"
        android:textStyle="italic"

        />



    <TextView
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_see_all_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="see user's posts.."
        android:layout_below="@+id/profile_ac_dob"
        android:textColor="@color/colorC"
        android:textSize="17dp"
        android:textStyle="italic"

        />

</RelativeLayout>