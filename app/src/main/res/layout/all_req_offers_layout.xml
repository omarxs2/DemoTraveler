<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_margin="7dp"
        android:background="@drawable/bk1"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_centerHorizontal="true"
        >


        <TextView
            android:paddingTop="3dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Request Sent"
            android:background="@color/black"
            android:id="@+id/show_status"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingHorizontal="10dp"
            ></TextView>

        <TextView
            android:visibility="invisible"
            android:paddingTop="3dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Accepted"
            android:background="@color/colorPrimary"
            android:id="@+id/show_accepted_status"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingHorizontal="10dp"
            ></TextView>

        <TextView
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:paddingTop="3dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Declined"
            android:background="@color/colorED"
            android:id="@+id/show_declined_status"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingHorizontal="10dp"
            ></TextView>

<LinearLayout
    android:id="@+id/tytyty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/show_declined_status"
    android:layout_centerHorizontal="true"

    >


    <LinearLayout
        android:layout_marginRight="50dp"
        android:layout_below="@+id/show_declined_status"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/ww"
        >

        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Local Guide:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  ></TextView>

        <TextView

            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/show_local_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="omar suleiman"
            android:paddingVertical="3dp"
            android:paddingHorizontal="3dp"
            android:background="@drawable/tags"
            android:textColor="@color/FontTagP"
            android:textSize="18dp"
            android:textStyle="italic"></TextView>
    </LinearLayout>





    <LinearLayout

        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/ww2"
        android:layout_below="@+id/ww"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No of People:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <TextView

            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Only me"
            android:id="@+id/show_number_people"
            android:paddingVertical="3dp"
            android:paddingHorizontal="3dp"
            android:background="@drawable/tags"
            android:textColor="@color/FontTagP"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  ></TextView>


    </LinearLayout>

</LinearLayout>



        <LinearLayout
            android:id="@+id/tytyty2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tytyty"
            android:layout_centerHorizontal="true">


            <LinearLayout
                android:layout_marginRight="50dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:id="@+id/ww3"
                >


                <TextView
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Starting Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  ></TextView>

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textStyle="italic"
                    android:hint="1/1/2019"
                    android:id="@+id/show_startdate"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/tags"
                    android:textColor="@color/FontTagP"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  ></TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:id="@+id/ww4"
                android:layout_below="@+id/ww3"
                >


                <TextView
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Ending Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  ></TextView>

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textStyle="italic"
                    android:hint="31/12/2019"
                    android:id="@+id/show_enddate"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="3dp"
                    android:background="@drawable/tags"
                    android:textColor="@color/FontTagP"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  ></TextView>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:id="@+id/ww5"
            android:layout_below="@+id/tytyty2"
            >


            <TextView
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="Notes:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  ></TextView>

            <TextView
                android:gravity="center"
                android:id="@+id/show_notes"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/tags"
                android:hint="Notes"
                android:paddingHorizontal="3dp"
                android:paddingVertical="3dp"
                android:textAlignment="center"
                android:textColor="@color/FontTagP"
                android:textSize="18dp"
                android:textStyle="italic"></TextView>


        </LinearLayout>


        <Button
            android:id="@+id/delete_req"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/button3"
            android:layout_below="@+id/ww5"
            android:text="Delete"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            ></Button>

        <Button
            android:paddingHorizontal="10dp"
            android:layout_below="@+id/delete_req"
            android:visibility="visible"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:text="Pay Now"
            android:background="@drawable/button4"
            android:id="@+id/show_pay_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"></Button>


    </RelativeLayout>

</RelativeLayout>