<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorC"
    android:id="@+id/activity_tab2">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="750dp"

        >




        <TextView
            android:id="@+id/bas"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Let your followers learn more about you!"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="@color/colorAccent"

            ></TextView>


        <TextView

            android:id="@+id/TTT2"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:layout_below="@+id/bas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name in ID:"
            />


        <EditText
            android:id="@+id/Fullgreatname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/TTT2"
            android:background="@drawable/inputs"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Full name as written in ID"
            android:paddingLeft="10dp"
            android:textSize="13dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textAlignment="center"
            />



        <TextView

            android:id="@+id/TT2"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:layout_below="@+id/Fullgreatname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Number:"
            />


        <EditText
            android:id="@+id/officialID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/TT2"
            android:background="@drawable/inputs"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Official ID Number"
            android:paddingLeft="10dp"
            android:textSize="13dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textAlignment="center"
            />



        <TextView

            android:id="@+id/T2"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:layout_below="@+id/officialID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Languages:"
            />


        <EditText
            android:id="@+id/bus_lang_you"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/T2"
            android:background="@drawable/inputs"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="What languages can you speak.."
            android:paddingLeft="10dp"
            android:textSize="13dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textAlignment="center"
            />


        <TextView

            android:id="@+id/T3"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:layout_below="@+id/bus_lang_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cities:"
            />


        <EditText
            android:visibility="invisible"
            android:id="@+id/bus_cities_you"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/T3"
            android:background="@drawable/inputs"

            />

        <Spinner
            android:textAlignment="center"
            android:background="@drawable/inputs"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/T3"
            android:id="@+id/cities_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp" />


        <TextView

            android:id="@+id/T1"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:layout_below="@+id/cities_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I will show you:"
            />


        <EditText
            android:id="@+id/bus_show_you"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/T1"
            android:background="@drawable/inputs"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="things you will show the tourists on the city.."
            android:paddingLeft="10dp"
            android:textSize="13dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textAlignment="center"
            />



        <TextView

            android:id="@+id/T4"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:layout_below="@+id/bus_show_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activities:"
            />


        <EditText
            android:id="@+id/bus_activities_you"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/T4"
            android:background="@drawable/inputs"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Activities to do on your city.."
            android:paddingLeft="10dp"
            android:textSize="13dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textAlignment="center"
            />

        <LinearLayout
            android:id="@+id/L1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/bus_activities_you"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/T5"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:layout_marginRight="10dp"
                />


            <EditText
                android:layout_centerHorizontal="true"
                android:id="@+id/bus_price_you"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/inputs"
                android:hint="$$$"
                android:textSize="13dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/T6"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:text="per"
                />


            <TextView

                android:layout_centerHorizontal="true"
                android:id="@+id/bus_per_you"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/inputs"
                android:text="Day"
                android:textSize="13dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:padding="3dp"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/hell"
            android:textColor="@color/colorAccent3"
            android:layout_below="@+id/L1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="**!! DAILY PRICE IN USD !!**"
            ></TextView>


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/bus_sub"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/hell"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button4"

            ></Button>


    </RelativeLayout>


</ScrollView>