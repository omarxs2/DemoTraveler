<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostsActivity"
    android:orientation="vertical"
    android:background="@color/colorAccent2"
    >

    <include
        android:id="@+id/posts_page_toolbar"
        layout="@layout/app_bar_layout" />


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2.5dp"
        android:layout_weight="1"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageButton
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:id="@+id/normal_post_btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/post" />

            <ImageButton
                android:layout_weight="1"
                android:background="@color/white"
                android:id="@+id/normal_post_btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/q" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="2.5dp"
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        <ImageButton
            android:background="@color/white"
            android:id="@+id/normal_post_btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/going" />
    </LinearLayout>


    <LinearLayout
        android:layout_margin="2.5dp"

        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        <ImageButton
            android:background="@color/white"
            android:id="@+id/normal_post_btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/schedule" />
    </LinearLayout>











</LinearLayout>
