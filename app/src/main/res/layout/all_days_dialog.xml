<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorB">



    <TextView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/f2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity No:"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginBottom="10dp"
        ></TextView>

    <EditText
        android:inputType="number"
        android:id="@+id/dialog_day_no"
        android:background="@drawable/inputs"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/f2"
        android:layout_marginBottom="10dp"
        android:hint="Ex. Act 1"
        android:textAlignment="center"
        android:gravity="center"></EditText>

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/f3"
        android:layout_below="@+id/dialog_day_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginBottom="10dp"
        ></TextView>

    <EditText
        android:id="@+id/dialog_type"
        android:background="@drawable/inputs"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/f3"
        android:layout_marginBottom="10dp"
        android:hint="Breakfast / shopping etc.."
        android:textAlignment="center"
        android:gravity="center"></EditText>

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/f4"
        android:layout_below="@+id/dialog_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place:"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginBottom="10dp"
        ></TextView>

    <EditText
        android:id="@+id/dialog_place"
        android:background="@drawable/inputs"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/f4"
        android:layout_marginBottom="10dp"
        android:hint="Place"
        android:textAlignment="center"
        android:gravity="center"
        ></EditText>


    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/f5"
        android:layout_below="@+id/dialog_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginBottom="10dp"
        ></TextView>

    <EditText
        android:id="@+id/dialog_loc"
        android:background="@drawable/inputs"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/f5"
        android:layout_marginBottom="10dp"
        android:hint="Address"
        android:textAlignment="center"
        android:gravity="center"
        ></EditText>

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/sd3"
        android:layout_below="@+id/dialog_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginBottom="10dp"
        ></TextView>

    <EditText
        android:id="@+id/dialog_desc"
        android:background="@drawable/inputs"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_below="@id/sd3"
        android:layout_marginBottom="10dp"
        android:hint="Describe in details"
        android:textAlignment="center"
        android:gravity="center"
        ></EditText>








</RelativeLayout>