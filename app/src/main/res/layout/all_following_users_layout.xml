<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >





        <RelativeLayout
            android:background="@drawable/inputs"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/all_following_profile_image"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"
                app:civ_border_color="@color/colorB"
                app:civ_border_width="2dp"/>




                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="65dp"
                    >

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/all_following_fullname"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:text="User Full Name"
                        android:textColor="@color/colorB"
                        android:textSize="23dp"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/all_following_fullname"
                        android:id="@+id/all_following_bio"
                        android:textStyle="italic"
                        android:textSize="12dp"
                        android:text="Bio"
                        android:textColor="@color/colorB"/>

                    <Button
                        android:id="@+id/all_users_send_message"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/sendmessage3"
                        />







                </RelativeLayout>








        </RelativeLayout>





</RelativeLayout>