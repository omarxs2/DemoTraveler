<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:id="@+id/business_info"
    android:background="@color/colorAccent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:textColor="@color/black"
            android:id="@+id/as"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Profile"
            android:textSize="30dp"/>


        <Button
            android:visibility="invisible"
            android:id="@+id/create_buss_acc"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/as"
            android:layout_marginTop="100dp"
            android:background="@drawable/buttons"
            android:text="create business account"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            />


        <RelativeLayout

            android:id="@+id/firstL"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorD"

            >

            <TextView
                android:id="@+id/q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I can speak:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"
                android:textColor="@color/colorAccent"
                ></TextView>

            <TextView
                android:id="@+id/w1"
                android:layout_below="@+id/q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arabic ,English,Turkish.."
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"
                android:layout_marginBottom="10dp"
                ></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/firstL"
            android:id="@+id/secondL"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorB"

            >

            <TextView
                android:id="@+id/q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cities:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"
                android:textColor="@color/colorAccent"
                ></TextView>

            <TextView
                android:id="@+id/w2"
                android:layout_below="@+id/q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Istanbul / Ankara"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"
                android:layout_marginBottom="10dp"
                ></TextView>


        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/secondL"
            android:id="@+id/theirdL"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorD"

            >

            <TextView
                android:id="@+id/q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I will show you:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"
                android:textColor="@color/colorAccent"
                ></TextView>

            <TextView
                android:id="@+id/w3"
                android:layout_below="@+id/q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i will show you everything on the city.."
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"
                android:layout_marginBottom="10dp"
                ></TextView>


        </RelativeLayout>



        <RelativeLayout
            android:layout_below="@+id/theirdL"
            android:id="@+id/fourthL"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorB"

            >

            <TextView
                android:id="@+id/q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"
                android:textColor="@color/colorAccent"
                ></TextView>

            <TextView
                android:id="@+id/w4"
                android:textAlignment="center"
                android:layout_below="@+id/q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1- blah blah blah
            2- blah blah blah
            3- blah blah blah "
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"
                android:layout_marginBottom="10dp"
                ></TextView>


        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/fourthL"
            android:id="@+id/fifthL"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorD"

            >

            <TextView
                android:id="@+id/q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"
                android:textColor="@color/colorAccent"
                ></TextView>



            <TextView
                android:id="@+id/w5"
                android:layout_below="@+id/q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$$"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"
                android:layout_marginBottom="10dp"
                ></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_below="@+id/fifthL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/see_rev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See Reviews"
                android:textSize="20dp"
                android:textStyle="italic|bold"
                android:textColor="@color/zeft"
                android:layout_centerHorizontal="true"
                ></TextView>


            <Button
                android:id="@+id/book_btn"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/see_rev"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/button4"
                android:textColor="@color/colorAccent"
                android:text="Book now"
                android:textSize="20dp"

                >

            </Button>




        </RelativeLayout>



    </RelativeLayout>


</ScrollView>