<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainServicesActivity"
    android:orientation="vertical"
    android:background="@color/colorAccent">


    <include layout="@layout/app_bar_layout"
        android:id="@+id/services_bar"
        android:layout_height="50dp"
        android:layout_width="match_parent"></include>



    <GridLayout
        android:columnCount="2"
        android:rowCount="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/local_guid_btn"
            android:textStyle="bold|italic"
            android:textSize="30dp"
            android:text="book   Local  Guide"
            android:textColor="@color/colorAccent"
            android:background="@drawable/localguid"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            ></Button>
        <Button
            android:id="@+id/make_group_btn"
            android:textStyle="bold|italic"
            android:textSize="30dp"
            android:text="Make  group   trip"
            android:textColor="@color/colorAccent"
            android:background="@drawable/group3"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            ></Button>
        <Button
            android:id="@+id/plan_trip_btn"
            android:textStyle="bold|italic"
            android:textSize="30dp"
            android:text="Cities"
            android:textColor="@color/colorAccent"
            android:background="@drawable/plan2"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            ></Button>

        <Button
            android:id="@+id/book_btn"
            android:textStyle="bold|italic"
            android:textSize="30dp"
            android:text="book      now"
            android:textColor="@color/colorAccent"
            android:background="@drawable/flight1"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            ></Button>

    </GridLayout>
</LinearLayout>