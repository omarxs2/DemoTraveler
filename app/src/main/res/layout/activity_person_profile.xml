<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorB"
    tools:context=".PersonProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >



        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/person_profile_profileimage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/profile" />


        <TextView
            android:id="@+id/person_profile_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_profile_profileimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Profile Name"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="35dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/person_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_profile_fullname"
            android:layout_centerHorizontal="true"
            android:text="Username"
            android:textColor="@color/colorAccent"
            android:textSize="17dp"
            android:textStyle="italic"

            />

        <TextView
            android:id="@+id/person_profile_bio"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_below="@+id/person_profile_username"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:text="Hello, I'm using traveler .. add me and discover new places."
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="italic" />


        <LinearLayout
            android:id="@+id/L1"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_below="@+id/person_profile_bio"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input2"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/posts_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="20"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/posts_number"
                    android:layout_centerHorizontal="true"
                    android:text="Posts"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="italic" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/followers_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="105"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/followers_number"
                    android:layout_centerHorizontal="true"
                    android:text="Follower"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="italic" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/following_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="200"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/following_number"
                    android:layout_centerHorizontal="true"
                    android:text="Following"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="italic" />
            </RelativeLayout>
        </LinearLayout>

            <TextView
                android:textStyle="italic"
                android:id="@+id/person_profile_gender"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/L1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                />

            <TextView
                android:textStyle="italic"
                android:id="@+id/person_profile_country"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/person_profile_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                />

            <TextView
                android:textStyle="italic"
                android:id="@+id/person_profile_relationship"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/person_profile_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relationship"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                />

            <TextView
                android:textStyle="italic"
                android:id="@+id/person_profile_dob"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/person_profile_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                />

            <Button
                android:id="@+id/person_profile_follow_btn"
                android:textStyle="italic"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:text="Follow"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttons"
                android:layout_below="@+id/person_profile_dob"
                android:layout_width="170dp"
                android:layout_height="40dp" />


            <Button
                android:id="@+id/person_profile_unfollow_btn"
                android:textStyle="italic"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:text="decline"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button3"
                android:layout_below="@+id/person_profile_follow_btn"
                android:layout_width="170dp"
                android:layout_height="40dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>