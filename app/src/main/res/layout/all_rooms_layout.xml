<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bck"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/room_profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
                <TextView
                    android:id="@+id/room_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="User Name"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:visibility="invisible"
                    android:id="@+id/all_posts_edit_btn"
                    android:layout_margin="5dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/edit"/>

</LinearLayout>
                <TextView
                    android:id="@+id/room_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />



        </LinearLayout>



    </LinearLayout>




        <TextView
            android:id="@+id/room_city"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISTANBUL / TURKEY"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="italic|bold"
            android:layout_marginBottom="1dp"
            ></TextView>

        <TextView
            android:id="@+id/room_dates"

            android:padding="3dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/07/2020 - 20/07/2020"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            ></TextView>

        <TextView
            android:id="@+id/room_about_desc"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="2dp"
            android:padding="3dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About the trip: hello there my name in Ahmet and i'm looking for an energetic people yo join me"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/room_tfood"
                android:padding="2dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="#Food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tags"
                android:textColor="#006100"
                ></TextView>

            <TextView
                android:id="@+id/room_thistory"

                android:padding="2dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="#History"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tagn"
                android:textColor="@color/FontTagN"
                ></TextView>

            <TextView
                android:id="@+id/room_tfestivals"

                android:padding="2dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="#Festivals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tags"
                android:textColor="#006100"
                ></TextView>

            <TextView
                android:id="@+id/room_tmuseums"

                android:padding="2dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="#Museums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tagn"
                android:textColor="@color/FontTagN"
                ></TextView>


            <TextView
                android:id="@+id/room_tsport"

                android:padding="2dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="#Sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tags"
                android:textColor="#006100"
                ></TextView>





            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/room_tactivities"

                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="#Activities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tags"
                    android:textColor="#006100"
                    ></TextView>

                <TextView
                    android:id="@+id/room_tparties"

                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="#Parties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tagn"
                    android:textColor="@color/FontTagN"
                    ></TextView>

                <TextView
                    android:id="@+id/room_tnature"

                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="#Nature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tagn"
                    android:textColor="@color/FontTagN"
                    ></TextView>

                <TextView
                    android:id="@+id/room_tshopping"

                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="#Shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tagn"
                    android:textColor="@color/FontTagN"
                    ></TextView>



            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/room_treligious"

                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="#Religious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tags"
                    android:textColor="@color/FontTagP"
                    ></TextView>

                <TextView
                    android:id="@+id/room_trecreation"

                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="#Recreation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tagn"
                    android:textColor="@color/FontTagN"
                    ></TextView>

                <TextView
                    android:id="@+id/room_tculture"

                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="#Culture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tags"
                    android:textColor="#006100"
                    ></TextView>

                <TextView
                    android:id="@+id/room_tart"

                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="#Art"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tagn"
                    android:textColor="@color/FontTagN"
                    ></TextView>


                <TextView
                    android:id="@+id/room_tsea"

                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="#Sea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tagn"
                    android:textColor="@color/FontTagN"
                    ></TextView>

            </LinearLayout>

        </LinearLayout>




        <TextView
            android:id="@+id/room_tlooking"

            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:background="@drawable/tagstand"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looking For: No specification"
            android:textSize="20dp"
            android:textColor="@color/FontTagSS"
            android:textStyle="italic"
            ></TextView>

            <TextView
                android:visibility="invisible"
                android:id="@+id/details_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:hint="Meeting details"
                android:textAlignment="center"
                android:padding="3dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"></TextView>
        <Button
            android:id="@+id/room_tjoin_btn"
            android:background="@drawable/buttons"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="Join"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            ></Button>



    </LinearLayout>


</RelativeLayout>