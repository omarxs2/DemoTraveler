<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/inputs"
    >

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        ></ImageView>

    <TextView
        android:id="@+id/all_daysno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day X"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        ></TextView>

        <TextView
            android:id="@+id/all_daysact"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Activities"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            ></TextView>

    <ImageButton
        android:id="@+id/editday"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_edit_black_24dp"></ImageButton>

    <ImageButton
        android:id="@+id/deleteday"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:src="@drawable/delete2"></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"></TextView>


    </LinearLayout>
</RelativeLayout>