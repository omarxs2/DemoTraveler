<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRoomActivity"
    android:background="@color/colorB">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/app_bar_layout"
            android:id="@+id/book_local_bar"
            android:layout_height="50dp"
            android:layout_width="match_parent"></include>

    <TextView
        android:layout_below="@+id/book_local_bar"
        android:id="@+id/baslan"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill the information about your room:"
        ></TextView>

    <TextView
        android:layout_below="@+id/baslan"
        android:id="@+id/EE12"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:gravity="center"

        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About:"
        ></TextView>


    <EditText
        android:textAlignment="center"
        android:gravity="center"

        android:hint="About you / your trip"
        android:layout_below="@+id/EE12"
        android:id="@+id/room_desc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        ></EditText>


        <TextView
            android:layout_below="@+id/room_desc"
            android:id="@+id/EE122"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:gravity="center"

            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looking for:"
            ></TextView>


        <Spinner
            android:textAlignment="center"
            android:gravity="center"

            android:layout_below="@+id/EE122"
            android:id="@+id/spinner_room_needs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/inputs"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            ></Spinner>

    <TextView
        android:id="@+id/EE"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:gravity="center"

        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinner_room_needs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City:"
        ></TextView>

    <Spinner
        android:textAlignment="center"
        android:gravity="center"

        android:background="@drawable/inputs"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/EE"
        android:id="@+id/spinner_city112"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/EE2"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:gravity="center"

        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinner_city112"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting Date:"
        ></TextView>

    <TextView
        android:paddingTop="8dp"
        android:textSize="18dp"
        android:hint="Select a date"
        android:textAlignment="center"
        android:gravity="center"

        android:background="@drawable/inputs"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/EE2"
        android:id="@+id/date_start_room"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        ></TextView>


    <TextView
        android:id="@+id/EE3"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:gravity="center"

        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/date_start_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ending Date:"
        ></TextView>

    <TextView
        android:paddingTop="8dp"
        android:textSize="18dp"
        android:hint="Select a date"
        android:textAlignment="center"
        android:gravity="center"

        android:background="@drawable/inputs"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/EE3"
        android:id="@+id/date_end_room"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        ></TextView>

    <TextView
        android:id="@+id/EE4"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:gravity="center"

        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/date_end_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interests:"
        ></TextView>

<LinearLayout
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:id="@+id/omarxs"
    android:layout_below="@+id/EE4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



<HorizontalScrollView
    android:layout_marginTop="5dp"
    android:id="@+id/hscroll"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/EE4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:textColor="@color/white"
            android:id="@+id/ckfood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="@color/white"
                android:id="@+id/ckhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="@color/white"
                android:id="@+id/ckfestivals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Festivals"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:textColor="@color/white"
            android:id="@+id/ckmuseum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Museums"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:textColor="@color/white"
            android:id="@+id/cksport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sport"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:textColor="@color/white"
            android:id="@+id/ckactivities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activities"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="@color/white"
                android:id="@+id/ckparty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parties"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="@color/white"
                android:id="@+id/cknature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nature"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="@color/white"
                android:id="@+id/ckshopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shopping"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="@color/white"
                android:id="@+id/ckreligious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Religious"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="@color/white"
                android:id="@+id/ckrecreation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recreation"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="@color/white"
                android:id="@+id/ckculture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Culture"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="@color/white"
                android:id="@+id/ckart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Art"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="@color/white"
                android:id="@+id/cksea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sea"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</HorizontalScrollView>
</LinearLayout>

    <Button
        android:id="@+id/createBtn"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:text="Create Room"
        android:background="@drawable/buttons"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/omarxs"
        android:layout_width="150dp"
        android:layout_height="45dp"

        ></Button>



</RelativeLayout>

</ScrollView>