<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrayerActivity"
    android:orientation="vertical"
    android:background="@drawable/azan2">


    <include
        android:id="@+id/prayer_page_toolbar"
        layout="@layout/app_bar_layout" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/ci"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Azan Time in Istanbtl/Turkey"
            android:textColor="@color/white"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"></TextView>


        <LinearLayout
            android:id="@+id/g1"
            android:layout_below="@+id/ci"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/inputs"
            android:layout_marginHorizontal="70dp"
            >
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fajr: "
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                ></TextView>
            <TextView
                android:id="@+id/fajr"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="05:11 am"
                android:textSize="30dp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/g2"
            android:layout_below="@+id/g1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/inputs"
            android:layout_marginHorizontal="70dp"
            >
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Duhur:"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                ></TextView>
            <TextView
                android:id="@+id/duhr"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="05:11 am"
                android:textSize="30dp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                ></TextView>

        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="10dp"
            android:id="@+id/g3"
            android:layout_below="@+id/g2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/inputs"
            android:layout_marginHorizontal="70dp"
            >
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Asr:"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                ></TextView>
            <TextView
                android:id="@+id/asr"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="05:11 am"
                android:textSize="30dp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/g4"
            android:layout_below="@+id/g3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/inputs"
            android:layout_marginHorizontal="70dp"
            >
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Magrib:"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                ></TextView>
            <TextView
                android:id="@+id/magrib"
                android:layout_marginHorizontal="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="07:30 am"
                android:textSize="30dp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/g5"
            android:layout_below="@+id/g4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/inputs"
            android:layout_marginHorizontal="70dp"
            >
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Isha':"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                ></TextView>
            <TextView
                android:id="@+id/isha"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="05:11 am"
                android:textSize="30dp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                ></TextView>

        </LinearLayout>


    </RelativeLayout>


</ScrollView>

</LinearLayout>